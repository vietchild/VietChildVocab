<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_playing_vocab"
    android:background="@drawable/background"
    tools:context="vn.vietchild.vietchildvocab.Fragments.PlayingVocabFragment">
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarScore2"
        style="@android:style/Widget.Holo.Light.RatingBar.Indicator"
        android:layout_below="@+id/progressBarTest"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:numStars="5" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewItemName"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/ratingBarScore2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/progressBarTest"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarTest"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ratingBarScore2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:numColumns="2"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:id="@+id/gridViewItems" />



</RelativeLayout>
