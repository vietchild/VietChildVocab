<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cvNewCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/cardview_course_margin"
        android:elevation="@dimen/cardview_course_elevation"
        card_view:cardCornerRadius="@dimen/cardview_course_radius">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/logovietchild"
            android:id="@+id/imageViewCourse"/>
        <TextView
            android:layout_below="@+id/imageViewCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCourseName"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewCourse"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="VIETCHILD"
            android:textSize="16sp"
            android:textColor="@color/com_facebook_blue"
            android:textStyle="bold"
            />
        <TextView
            android:layout_below="@+id/textViewCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCoursePrice"
            android:layout_toRightOf="@+id/imageViewCourse"

            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_below="@+id/textViewCoursePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCourseDesc"
            android:layout_toRightOf="@+id/imageViewCourse"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />
        <TextView
            android:layout_below="@+id/textViewCourseDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCourseTotalItems"
            android:layout_toRightOf="@+id/imageViewCourse"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />
        <Button
            android:layout_below="@+id/textViewCourseTotalItems"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:id="@+id/btnCourseBuy"
            android:background="@color/colorAccent"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
             />
    </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>